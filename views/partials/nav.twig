<a href="#" class="nav-trigger">Menu</a>
<nav class="site-nav nav-main" role="navigation">
	<ul class="nav-items">
	{% for item in menu.get_items %}
		<li class="nav-item {{item.classes | join(' ')}}">
			<a class="nav-item-link" href="{{item.link}}">{{item.title}}</a>
			{% if item.get_children %}
				<ul class="nav nav-drop">
				{% for child in item.get_children %}
					<li class="nav-drop-item {{item.classes | join(' ')}}">
						<a class="nav-link" href="{{child.get_link}}">{{child.title}}</a>
					</li>

					{% if child.get_children %}
						<ul class="nav nav-drop">
						{% for baby in child.get_children %}
							<li class="nav-drop-item {{child.classes | join(' ')}}">
								<a class="nav-link" href="{{baby.get_link}}">{{baby.title}}</a>
							</li>
						{% endfor %}
					{% endif %}

				{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endfor %}
	</ul>
</nav> <!-- /.nav-main -->
