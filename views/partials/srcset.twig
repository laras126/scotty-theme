{% set img = TimberImage(id) %}

<img
  data-sizes="auto"
  src="{{img.src|resize(50)}}"
  data-src="{{img.src('medium')}}"
  data-srcset="
      {{img.src('thumbnail')}} 300w,
      {{img.src('medium')}} 600w,
      {% if size != thumb %}{{img.src('large')}} 900w{% endif %}"
  class="lazyload blur-up {{class}}" />

