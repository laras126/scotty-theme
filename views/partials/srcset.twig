{% set img = TimberImage(id) %}

<img
  data-sizes="auto"
  src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
  data-src="{{img.src('medium')}}"
  data-srcset="
      {{img.src('thumbnail')}} 300w,
      {{img.src('medium')}} 600w,
      {{img.src('large')}} 900w"
  class="lazyload blur-up {{class}}" />
