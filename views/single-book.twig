{% extends "base.twig" %}

{% block content %}

	<article class="post-type-{{post.post_type}} post-format-{{post.format}}" id="post-{{post.ID}}">

    <div class="contain-lg">
      {{breadcrumbs}}
    </div>

    <section class="article-content contain-lg">
      <div class="article-content-inner">

        <header class="article-header-info">
          <h1 class="article-title">{{post.title}}</h1>
          <p class="tease-credit meta-upper">By {{ post.book_author_link ? '<a href="' ~ post.book_author_link ~ '">'}}{{post.book_author}}{{post.book_author_link ? '</a>'}}
          </p>
          {{post.get_field('review')}}

          {% if post.get_terms('post_tag') %}
            <p class="meta">Tagged:
            {% for c in post.get_terms('post_tag') %}
              <a class="meta" href="{{c.link}}">{{c.title}}</a>{{loop.last ? '' : ', '}}
            {% endfor %}
            </p>
          {% endif %}
        </header>

        <div class="article-header-thumb teaser">
          <a href="{{post.amazon_link}}" target="blank">
            {% include 'partials/srcset.twig' with { id: post.thumbnail.id, class: 'full-image' } %}
          </a>
          {% if post.thumbnail.caption %}
            <p class="caption">{{post.thumbnail.caption}}</p>
          {% endif %}

          {% if post.amazon_link %}
            <div class="btn-wrap -full-lg">
              <a class="btn btn-amazon" target="blank" href="{{post.amazon_link}}">See it on Amazon</a>
            </div>
          {% endif %}
        </div>

      </div>
    </section>


    <div class="contain-lg text-center">
      {% if related_recipes %}
        <h5 class="recipe-section-title meta-upper">Related Recipes</h5>
        <ul class="related-recipes">
          {% for r in related_recipes %}
            {% if r.title != post.title %}
              <li>{{r.title}}</li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}
   </div>


    <footer class="article-footer">
      {% include 'partials/prev-next.twig' %}
    </footer>

    {% include 'partials/edit-link.twig' %}

	</article>

{% endblock %}
